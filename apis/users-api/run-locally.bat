@echo off

set "layersPath=.\..\..\layers\*"

echo ================================================================================
echo ==================== Removing build folders from each layer ====================
echo ================================================================================
for /D %%F in ("%layersPath%") do (
    echo Removing build folder from: %%F
    rd /s /q "%%F\build"
)

echo ================================================================================
echo ======================== Copying layers as dependencies ========================
echo ================================================================================
xcopy /E /Y "%layersPath%" ".\node_modules"
echo ================================================================================
